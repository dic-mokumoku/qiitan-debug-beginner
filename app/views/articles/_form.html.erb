<%= simple_form_for article do |f| %>
  <div class="article__form-container">
    <div class="article__title-container">
      <div class="article__status-label-container">
        <% if article.new_record? %>
          <div class="article__status-label article__status-label-unposted">未投稿</div>
        <% else %>
          <div class="article__status-label article__status-label-posted">投稿済み</div>
        <% end %>
      </div>
      <%= f.input :title, input_html: { class: 'form-control article__title-form' }, placeholder: 'タイトル', label: false %>
    </div>
    <div class="article__markdown-container">
      <div class="article__body-container">
        <div class="article__body-header">
          <p><%= Article.human_attribute_name :body %></p>
        </div>
        <div class="article__body-panel">
          <div class="article__body-form-container">
            <%= f.input :body, input_html: { class: 'js-article-body article__body-form' },
                placeholder: 'プログラミング知識をMarkdown記法で書いて共有しよう', label: false, wrapper: false %>
          </div>
        </div>
      </div>
      <div class="article__preview-container">
        <div class="article__preview-header">
          <p>プレビュー</p>
        </div>
        <div class="article__preview-panel">
          <div id="js-article-preview" class="article__preview-section" data-preview-url="<%= preview_articles_path %>"></div>
        </div>
      </div>
      <div class="article__submit-container">
        <div class="float-right">
          <%= f.button :button, class: 'btn btn-primary btn', data: { disable_with: '送信中...' } do %>
            <%= icon('fas', 'upload', 'QiitanDebugBeginnerに投稿') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
